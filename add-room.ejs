<% include partials/header.ejs %>

<h1>Room Details</h1>

<form method="post">
    <div class="form-group">
        <label for="location" class="col-sm-2 control-label">Location:</label>
        <input name="location" id="location" required />
    </div>
    <div class="form-group">
        <label for="bedroom"class="col-sm-2 control-label">Bedroom:</label>
        <input name="bedroom" id="bedroom" required type="number" min="0"/>
    </div>
    <div class="form-group">
        <label for="price"class="col-sm-2 control-label">Price:</label>
        <input name="price" id="price" required type="number" min="0" />
    </div>
    <div class="form-group">
        <label for="introduction"class="col-sm-2 control-label">Introduction:</label>
        <input name="introduction" id="introduction" required />
    </div>
    <button class="btn btn-success col-sm-offset-2">Save</button>
</form>

